<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockScreen"
    android:orientation="horizontal"
    android:background="#BACCB9"
    android:weightSum="4"
    android:baselineAligned="false">
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="5">
        <Button
            android:id="@+id/buttonForgotPin"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:text="@string/forgot_pin"
            android:textColor="#272727"
            android:textSize="16sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/one_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/two_number"
            android:textColor="#272727"
            android:textSize="30sp"
            android:background="#00DAEDCC"/>
        <Button
            android:id="@+id/button5"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/five_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button6"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/six_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button9"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/nine_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button0"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/zero_string"
            android:textColor="#272727"
            android:textSize="30sp"/>

    </GridLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/TextViewShowPin"
            android:layout_above="@+id/ViewHorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5C5B5B"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/ViewHorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextViewShowPin"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TextViewFirstTime"
                    android:text="@string/dummy_bbbbbbbbb"
                    android:textSize="23sp"
                    android:textColor="#5C5B5B"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/TextViewTemporary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5C5B5B"
                    android:textSize="17sp"/>
            </LinearLayout> <!-- 1 -->

        </RelativeLayout>

    </RelativeLayout>


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:rowCount="5"
        android:columnCount="2">
        <ImageButton
            android:id="@+id/buttonNotifyExtra"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:src="@drawable/ic_notify"
            android:contentDescription="@string/notify_button"
            android:background="#BACCB9"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/three_number"
            android:textColor="#272727"
            android:textSize="30sp"
            android:background="#00DAEDCC"/>
        <Button
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/four_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button7"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/seven_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button8"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/eight_number"
            android:textColor="#272727"
            android:textSize="30sp"/>
            <ImageButton
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:contentDescription="@string/backspace_button"
                android:background="@drawable/ic_backspace" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
    </GridLayout>


</LinearLayout>
