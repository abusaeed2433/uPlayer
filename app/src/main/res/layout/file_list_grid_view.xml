<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="2dp"
    android:weightSum="100"
    android:padding="8dp"
    android:id="@+id/linearLayoutFileList"
    android:background="@drawable/shadow_background_up">

    <ImageView
        android:id="@+id/ImageViewThumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:layout_margin="4dp"
        android:background="@drawable/shadow_background_down"
        android:contentDescription="@string/video_thumb" />

    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:text="@string/dummy"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:maxLines="1"/>

    <ImageButton
        android:visibility="gone"
        android:id="@+id/ImageButtonMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        android:background="#00DAEDCC"
        android:contentDescription="@string/more"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
