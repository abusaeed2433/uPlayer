<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exoPlayerTesting"
    android:background="#5C5D61">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/FrameLayoutForVolume">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="200dp"
            app:resize_mode="fit"
            app:hide_on_touch="true"
            app:show_timeout="4000"
            android:layout_gravity="center_vertical"
            app:use_controller="true"
            app:player_layout_id="@layout/exo_styled_player_view"
            app:controller_layout_id="@layout/custom_controller"/>

        <com.google.android.exoplayer2.ui.SubtitleView
            android:id="@+id/exo_subtitles"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <RelativeLayout
                android:id="@+id/linearLayoutVolumeControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:visibility="gone">
                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:id="@+id/seekBarAbove">
                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/SeekBarVolume"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:splitTrack="false"
                        app:seekBarRotation="CW270"
                        android:progressDrawable="@drawable/seek_bar_controller_design"
                        android:thumb="@drawable/seek_bar_controller_thumb"
                        android:layout_centerVertical="true"/>
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
                <ImageView
                    android:id="@+id/ImageViewSound"
                    android:src="@drawable/ic_volume_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/seekBarAbove"
                    android:contentDescription="@string/sound_icon"/>
            </RelativeLayout> <!-- for volume seekBar-->
            <LinearLayout
                android:id="@+id/linearLayoutForwardControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/ImageViewForwardBackward"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/dummy_time"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:textColor="#064695"
                    android:layout_gravity="center"/>
                <SeekBar
                    android:id="@+id/SeekBarForwardBackward"
                    android:layout_width="240dp"
                    android:layout_height="15dp"
                    android:progressDrawable="@drawable/seek_bar_controller_design"
                    android:thumb="@drawable/seek_bar_controller_thumb"
                    android:splitTrack="false"/>
            </LinearLayout> <!-- forward backward seekBar-->
            <LinearLayout
                android:id="@+id/linearLayoutBrightnessControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:visibility="gone">
                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="30dp"
                    android:layout_height="150dp">
                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/SeekBarBrightness"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:splitTrack="false"
                        android:progressDrawable="@drawable/seek_bar_controller_design"
                        android:thumb="@drawable/seek_bar_controller_thumb"
                        app:seekBarRotation="CW270"/>
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
                <ImageView
                    android:id="@+id/ImageViewBrightness"
                    android:src="@drawable/ic_brightness"
                    android:contentDescription="@string/brightness_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|bottom"/>
            </LinearLayout> <!-- for brightness seekBar-->
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:visibility="gone"
            android:id="@+id/ViewLeftSide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View
            android:visibility="gone"
            android:id="@+id/ViewRightSide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
