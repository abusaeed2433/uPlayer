<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:background="#5C5D61"
tools:context=".Player">

<View
    android:id="@+id/ViewForLock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"/>  <!-- lock button -->
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/FrameLayoutForVolume">
    <VideoView
        android:id="@+id/VideoViewPLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:visibility="gone">
        <Button
            android:id="@+id/ButtonLock"
            android:onClick="ButtonLockClicked"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/linearLayoutVolumeControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:visibility="gone">
            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:id="@+id/seekBarAbove">
                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/SeekBarVolume"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:splitTrack="false"
                    app:seekBarRotation="CW270"
                    android:progressDrawable="@drawable/seek_bar_controller_design"
                    android:thumb="@drawable/seek_bar_controller_thumb"
                    android:layout_centerVertical="true"/>
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
            <ImageView
                android:id="@+id/ImageViewSound"
                android:src="@drawable/ic_volume_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/sound_icon"
                android:layout_below="@+id/seekBarAbove"/>
        </RelativeLayout> <!-- for volume seekBar-->
        <LinearLayout
            android:id="@+id/linearLayoutForwardControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:id="@+id/ImageViewForwardBackward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/forward"
                android:layout_gravity="center_horizontal"/>
            <SeekBar
                android:id="@+id/SeekBarForwardBackward"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:progressDrawable="@drawable/seek_bar_controller_design"
                android:thumb="@drawable/seek_bar_controller_thumb"
                android:splitTrack="false"/>
        </LinearLayout> <!-- forward backward seekBar-->
        <LinearLayout
            android:id="@+id/linearLayoutBrightnessControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:visibility="gone">
            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="30dp"
                android:layout_height="150dp">
                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/SeekBarBrightness"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:splitTrack="false"
                    android:progressDrawable="@drawable/seek_bar_controller_design"
                    android:thumb="@drawable/seek_bar_controller_thumb"
                    app:seekBarRotation="CW270"/>
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
            <ImageView
                android:id="@+id/ImageViewBrightness"
                android:src="@drawable/ic_brightness"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/brightness_icon"
                android:layout_gravity="end|bottom"/>
        </LinearLayout> <!-- for brightness seekBar-->
    </RelativeLayout>

</FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <View
        android:id="@+id/ViewLeftSide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <View
        android:id="@+id/ViewRightSide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
</RelativeLayout>