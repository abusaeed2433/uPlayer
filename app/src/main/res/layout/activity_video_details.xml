<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555252">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="7dp"
        android:background="@drawable/corner_round"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FEC9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/name_colon"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="#000000"
            android:maxLines="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FEC9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/duration_colon"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="0dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="2"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FEC9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/size_colon"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="#000000"
            android:layout_weight="2"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FEC9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/resolution_colon"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewResolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9FEC9F"/>
    </LinearLayout>
</LinearLayout>
    <!--name,path,duration,size,resolution,date-->
