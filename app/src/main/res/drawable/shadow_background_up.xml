<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_bottom_right"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item
        android:left="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_top_left"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_background"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
