<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray">

    <item android:id="@android:id/mask">

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_bottom_right"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:left="3dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:bottom="3dp"
                android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_top_left"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp"
                android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_background"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:id="@android:id/background">

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_bottom_right"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:left="3dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:bottom="3dp"
                android:right="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_top_left"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp"
                android:top="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neu_background"/>
                    <corners android:radius="3dp" />
                </shape>
            </item>

        </layer-list>

    </item>

</ripple>
